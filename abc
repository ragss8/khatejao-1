import React, { useState } from 'react';
import "./rest-form.css"

const Restaurant = () => {
  const [menuItemid, setMenuItemId] = useState('');
  const [restaurantId, setRestaurantId] = useState('');
  const [name,setName] = useState('');
  const [description,setDescription] = useState('');
  const [price,setPrice] = useState('');
  const [ingredients,setIngredients] = useState('');

  const handleMenuItemSubmit = (event) => {
    event.preventDefault();

    id: str, restaurant_id, name, description, price,ingredients
    console.log('menuItemid,',);
    console.log('restaurantId',);
    console.log('name,',);
    console.log('description',);
    console.log('price',);
    console.log('ingredients',);

  };

  const handlePhotoChange = (event) => {
    const file = event.target.files[0];
    setRestaurantPhoto(file);
  };

  const handleOverlayClick = () => {
    setShowOverlay(false);
  };

  const handleOpenForm = () => {
    setShowOverlay(true);
  };

  return (
    <div>
      <h2>Restaurant Details</h2>
      <button onClick={handleOpenForm}>Add Restaurant</button>
      {showOverlay && (
        <div className="overlay" onClick={handleOverlayClick}>
          <div className="form-container" onClick={(e) => e.stopPropagation()}>
            <h2>Add Restaurant<h6>click away from form to close </h6></h2>
            <form onSubmit={handleRestaurantSubmit}>
              <label>
                Restaurant Name:
                <input
                  type="text"
                  value={restaurantName}
                  onChange={(e) => setRestaurantName(e.target.value)}
                />
              </label>
              <label>
                Address:
                <input type="text" value={address} onChange={(e) => setAddress(e.target.value)} />
              </label>
              <label>
                Phone Number:
                <input
                  type="text"
                  value={phoneNumber}
                  onChange={(e) => setPhoneNumber(e.target.value)}
                />
              </label>
              <label>
                Cuisine Type:
                <input
                  type="text"
                  value={cuisineType}
                  onChange={(e) => setCuisineType(e.target.value)}
                />
              </label>
              <label>
                Opening Hours:
                <input
                  type="text"
                  value={openingHours}
                  onChange={(e) => setOpeningHours(e.target.value)}
                />
              </label>
              <label>
                Delivery Time:
                <input
                  type="text"
                  value={deliveryTime}
                  onChange={(e) => setDeliveryTime(e.target.value)}
                />
              </label>
              <label>
                Average Rating:
                <input
                  type="text"
                  value={averageRating}
                  onChange={(e) => setAverageRating(e.target.value)}
                />
              </label>
              <label>
                Restaurant Photo:
                <input type="file" accept="image/*" onChange={handlePhotoChange} />
              </label>
              <button type="submit">Submit</button>
            </form>
          </div>
        </div>
      )}
    </div>
  );
};

export default Restaurant;


